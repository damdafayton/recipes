<section id="foods" class="mt-2 mx-1 mx-sm-3 mx-md-5">
  <div class="text-end">
    <%= link_to "New Food", new_food_path, class:"btn btn-primary btn-sm mb-2 mt-1" %>
  </div>
  <div class="row row-cols-4">
    <span>Food</span>
    <span>Measurement Unit</span>
    <span>Unit price</span>
    <span>Actions</span>
  </div>
  <% @foods.each  do |food| %>
  <div class="row row-cols-4 my-2">
    <span><%= food.name %></span>
    <span><%= food.measurement_unit %></span>
    <span><%= food.price %>$</span>
    <span><%= button_to 'Delete', food_path(food.id), method: :delete, class:"btn btn-sm btn-danger" %></span>
  </div>
  <% end %>
</section>