<%# <%= link_to '<< Back to recipe', recipe_path(@recipe.id) %> %>
<%= form_with model: @InventoryFood, url:inventory_foods_path do |form| %>
    <%= form.select :food_id, @foods.map {|food| [food.name, food.id] }, {:include_blank => "-", :required => true} %>
    <%= form.label :food_id, "Choose food from the list"%>

    <%= form.select :inventory_id, @inventory.map {|invent| [invent.name, invent.id]}, {:include_blank => "-", :required => true} %>
    <%= form.label :inventory_id, "Inventory" %>

    <%= form.number_field :quantity, required: true %>
    <%= form.label :quantity, "Question" %>

    <%= form.submit "Add Ingredient"%>
<% end %>
