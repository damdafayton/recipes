<div class="text-end">
  <%= link_to "New Recipe", new_recipe_path, class:"btn btn-primary" %>
</div>
<div class="all-recipes">
  <% if @recipes.empty? %>
    <p>No Recipes Yet - Please Add</p>
    <%else%>
    <% @recipes.each do |recipe| %>
      <div class="recipe">
        <h3><%= recipe.name %></h3>
        <p><%= link_to('Remove', delete_recipe_path(recipe)) %></p>
        <p>Preparation Time: <%= recipe.preparation_time %></p>
        <p>Cooking Time: <%= recipe.cooking_time %></p>
        <p>Instructions: <%= recipe.description %></p>
      </div>
    <% end %>
  <%end%>

</div>
